generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Post {
  id Int @id @default(autoincrement())

  title  String
  body   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id Int @id @default(autoincrement())

  postId Int
  name   String
  email  String
  body   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Todo {
  id Int @id @default(autoincrement())

  userId    Int
  title     String
  completed Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id Int @id @default(autoincrement())

  name     String
  userName String
  email    String  @unique
  phone    String?
  website  String?
  address  String?
  company  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Album {
  id Int @id @default(autoincrement())

  userId Int
  title  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Photo {
  id Int @id @default(autoincrement())

  albumId      Int
  title        String
  url          String
  thumbnailUrl String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
